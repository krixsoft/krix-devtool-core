    "@krix/state-store": "^6.0.1",
    "lodash": "^4.17.21",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chrome": "0.0.158",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.1",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
