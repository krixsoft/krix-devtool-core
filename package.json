    "gulp-replace": "^1.1.3",
    "gulp-run": "^1.7.1",
    "gulp-typescript": "^5.0.1",
    "mocha": "^9.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "webpack": "^5.55.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0"
  }
